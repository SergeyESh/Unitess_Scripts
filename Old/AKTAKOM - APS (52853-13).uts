call INSTB_U_Upit            0,1                                1                        0.8                            30k                        0,9                                
call INSTB_U_Upit            0,5                                1                        0.8                            30k                        1.1                            #uhesh(Upit1_3320)        
call INSTB_U_Upit            0,5                                1                        0.8                            30k                        0,9                            #uhesh(Upit2_3320)        
call INSTB_U_Upit              1                                1                        0.8                            30k                        1,1                                
call INSTB_U_Upit              1                                1                        0.8                            30k                        0,9                                


###################################################################################################################################################################
#/    Определение нестабильности выходного напряжения при изменении тока нагрузки.             
###################################################################################################################################################################

#                            Напряжение СИ от U_max, В;        Ток СИ от Imax, А;        Ток нагрузки от Imax, А;    Интервал жидания, с;    Выходной ток от I_max 2, А;
call INSTB_U_Inagr            1                                  1                        0.8                            30k                        0.1

###################################################################################################################################################################
#/    Определение пульсации выходного напряжения.             
###################################################################################################################################################################

#                            Напряжение СИ от U_max, В;                                Ток нагрузки от Imax, А;    Интервал жидания, с;
call PVDC                   1                                                        0.8                            30k
call PVDC                   1                                                        0.1                            30k

###################################################################################################################################################################
#/    Определение абсолютной погрешности формирования силы выходного тока.             
###################################################################################################################################################################
 
#                            Ток СИ от Imax, А;        Напряжение СИ от U_max, В;        Ток нагрузки от Imax, А;    Интервал жидания, с;    
