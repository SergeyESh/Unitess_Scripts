				math mem_2019 = abs(mem_2011)							#	Вычисления модуля отклонения
			Else
				math mem_2011 = mem_2101-mem_2100						#	Вычисления отклонения между точками
				math mem_2019 = abs(mem_2011)							#	Вычисления модуля отклонения
				string mem_2102 = "не измерялось в соотв. с методикой"
			Endif
